class Solution {
public:
    int removeElement(vector<int>& nums, int val) {
        if(nums.empty())
            return 0;
        
        int len = nums.size();
        for(int i = 0; i < len; i++){
            if(nums[i] == val){
                len--;
                for(int j = i; j < len; j++){
                    nums[j] = nums[j+1];
                }
                i--;
            }
        }
        return len;
    }
};
